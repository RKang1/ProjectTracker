@using ProjectTracker.Models.Dashboard.ViewModels;
@using ProjectTracker.Models.Project.Models;
@using ProjectTracker.Models.Project.ViewModels;

@model DashboardViewModel;

<button type="button" class="btn btn-primary" id="addProjectBtn">Add Project</button>

<h1>Dashboard</h1>
<table class="table table-dark table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Project</th>
            <th scope="col">Status</th>
            <th scope="col">Stage</th>
            <th scope="col">Comments</th>
        </tr>
    </thead>

    <tbody>
        @foreach (ProjectModel project in Model.Projects)
        {
            <tr>
                <td scope="row">@project.Name</td>
                <td>@project.Status</td>
                <td>@project.Stage</td>
                <td>@project.Comments</td>
            </tr>
        }
    </tbody>
</table>

<div id="addProjectPartial"></div>

@section Scripts
{
    <script>
        document.querySelector("#addProjectBtn").addEventListener("click", (e) => {

            var request = new XMLHttpRequest();
            request.open('GET', '@Url.Action("AddProjectPartial", "Project")', true);

            request.onload = function () {
                if (this.status >= 200 && this.status < 400) {
                    var resp = this.response;

                    document.querySelector("#addProjectPartial").innerHTML = resp;
                } else {
                    // We reached our target server, but it returned an error

                }
            };

            request.onerror = function () {
                // There was a connection error of some sort
            };

            request.send();
        });
    </script>
}